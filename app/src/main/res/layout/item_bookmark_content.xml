<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvContentItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/main_margin_mini"
    app:cardCornerRadius="@dimen/main_item_card_borders"
    app:cardElevation="3dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBookmarkContentArabic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quran_font"
            android:padding="@dimen/main_padding" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBookmarkContentTranslation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/main_padding"
            android:paddingRight="@dimen/main_padding"
            android:paddingBottom="@dimen/main_padding" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/main_margin"
            android:layout_marginRight="@dimen/main_margin"
            android:background="@color/Gray" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/main_padding_mini">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPlayPause"
                android:layout_width="@dimen/main_app_icon_size"
                android:layout_height="@dimen/main_app_icon_size"
                android:background="@drawable/ic_play_grey"
                android:clickable="false" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:focusable="true" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCopy"
                android:layout_width="@dimen/main_app_icon_size"
                android:layout_height="@dimen/main_app_icon_size"
                android:layout_marginEnd="@dimen/main_margin_mini"
                android:background="@drawable/state_copy" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnShare"
                android:layout_width="@dimen/main_app_icon_size"
                android:layout_height="@dimen/main_app_icon_size"
                android:layout_marginEnd="@dimen/main_margin_mini"
                android:background="@drawable/state_share" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNumberSupplication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_content_name"
                android:paddingLeft="@dimen/main_padding_mini"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/main_padding_mini"
                android:paddingBottom="5dp"
                android:textColor="@color/White"
                android:textSize="@dimen/main_app_text_size" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>